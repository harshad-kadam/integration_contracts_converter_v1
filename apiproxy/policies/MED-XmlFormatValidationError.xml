<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="MED-XmlFormatValidationError">
    <DisplayName>MED-XmlFormatValidationError</DisplayName>
    <Properties/>
    <!--<Copy source="error"/>-->
    <Set>
        <Payload contentType="application/xml">
            <XMLResponse>
                <ErrorCode>40000</ErrorCode>
                <ErrorDescription>Bad request. Please check your input and try again.</ErrorDescription>
            </XMLResponse>
        </Payload>
        <StatusCode>400</StatusCode>
        <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="true" transport="http" type="error"/>
</AssignMessage>